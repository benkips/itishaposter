<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.digitalexperts.itishaposter.main"
        android:label="Itisha Graphic"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_main_to_payments"
            app:destination="@id/nav_payments"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_main_to_about"
            app:destination="@id/nav_about"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_main_to_profile"
            app:destination="@id/nav_profile"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_main_to_notification"
            app:destination="@id/notification"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/nav_payments"
        android:name="com.digitalexperts.itishaposter.payments"
        android:label="My payments"
        tools:layout="@layout/fragment_payments" />
    <fragment
        android:id="@+id/nav_about"
        android:name="com.digitalexperts.itishaposter.about"
        android:label="About us"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.digitalexperts.itishaposter.profile"
        android:label="My profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/notification"
        android:name="com.digitalexperts.itishaposter.notification"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
</navigation>